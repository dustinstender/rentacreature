<div class="page">
    <%= simple_form_for [@creature] do |f| %>
        <%= f.input :name %>
        <%= f.input :species%>
        <%= f.input :age%>
        <%= f.input :address%>
        <%= f.input :power, collection: ["good-luck","flying","dark-power","magic"]%>
        <%= f.input :rating%>
        <%= f.input :profile_pic, as: :file%>
        <%= f.input :description%>
        <%= f.input :price_per_day%>
        <%= f.submit "Submit creature", class: "btn btn-index white-button-words" %>
    <% end %>
