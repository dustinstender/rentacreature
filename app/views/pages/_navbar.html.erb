<% if user_signed_in? %>
<div class="navbar navbar-inverse navbar-trans sticky-top navbar-light navbar-expand-sm navbar-fixed-top">
    <%= link_to root_path, class: "navbar-brand" do %>
      <div class="logo-brand">
      <p class="p-logo"><%= image_tag "monster-logo.png" %> RentCreatures</p>
      </div>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item dropdown">
          <% if current_user.photo.attached?%>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else%>
            <%= image_tag "wand.jpg" , class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false%>
          <%end%>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Dashboard", bookings_path, class: "dropdown-item"%>
              <%=link_to "Create a Creature", new_creature_path, class: "dropdown-item"%>
              <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", method: :delete %>
            </div>
        </li>
      </ul>
    </div>
</div>
<% else %>
  <div class="navbar navbar-inverse navbar-trans sticky-top navbar-light navbar-expand-sm navbar-fixed-top">
    <%= link_to "#", class: "navbar-brand" do %>
      <div class="logo-brand">
      <p class="p-logo"><%= image_tag "monster-logo.png" %> RentCreatures</p>
      </div>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
        </li>
      </ul>
    </div>
  </div>
<% end %>
