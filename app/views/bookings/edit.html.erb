<div class="page">
  <div class="category">
    <div>
      <h2 class="my-4">Edit your experience with <%= @booking.creature.name %></h2>
      <div class="two-columns-page">
        <div class="left-block">
          <div class="card-product" style="height: 140px;">
            <%= image_tag @booking.creature.profile_pic, :style => "height: 100%; width: 140px;" %>
            <div class="card-product-infos">
              <h2><%= @booking.creature.name %> the <%= @booking.creature.species %></h2>
              <p><%= @booking.creature.description %></p>
              <p style="opacity: 0;">.</p>
              <div class="bottom" style="display:flex; justify-content: space-between;">
                <p><%= @booking.creature.rating %> ⭐️</p>
                <p id="creature_price"><%= @booking.creature.price_per_day %>$ <small>per day</small></p>
              </div>
            </div>
          </div>
          <div id="map"
                  class="my-4"
                  style="width: 600px; height: 400px; border-radius: 7px;"
                  data-markers="<%= @markers.to_json %>"
                  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
          </div>
        <div class="right-block">
          <div>
            <% if policy(@booking).new? %>
              <%= simple_form_for [@booking.creature, @booking] do |f| %>
                <%= f.input :start_date, label: 'When will your experience begin ?', html5: true %>
                <%= f.input :end_date, label: 'When will it end ?', html5: true %>
                <%= f.submit "Book", class: 'btn btn-flat btn-sm'  %>
              <% end %>
            <% end %>
          </div>
          <div class="info-card">
            <h2 class="mb-4">Your booking info</h2>
            <p id="total_price"></p>
            <p id="duration"></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
